<% unless comment.archived? %>
<div>
    <p>
        <strong> <%= comment.commenter %> </strong>
    </p>
    <p> <%= comment.body %> </p>
    <p>
        <%= link_to "Delete comment", [comment.article, comment], data: {
            turbo_method: :delete,
            turbo_confirm: :"Are you want to delete this comment?"
        } %> 
</div>
<% end %>